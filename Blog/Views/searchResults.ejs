<h1>Search results for <%= query %></h1>

<% if (results.length === 0) { %>
    <p>No posts found.</p>
<% } %>

<ul>
    <% results.forEach(post => { %>
        <li>
            <a href="/posts/<%= post._id %>">
                <strong><%= post.title %></strong>
            </a>
            <p><%= post.content.substring(0, 150) %>...</p>
        </li>
    <% }); %>
</ul>